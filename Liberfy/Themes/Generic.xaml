    <SolidColorBrush x:Key="TabControl.Static.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="TabControl.Static.BorderBrush" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="TabPanel.Static.Background" Color="#FFEEEEEE" />
    <SolidColorBrush x:Key="TabItem.Static.Background" Color="#FFF4F4F4" />
    <SolidColorBrush x:Key="TabItem.Static.Foreground" Color="#FF000000" />
    <SolidColorBrush x:Key="TabItem.Static.BorderBrush" Color="#FFCCCCCC" />
